<div class="shape">
<h1 id="h1">Sign In</h1>

<%= form_with url: sign_in_path do |form| %>
<div class="boxes">
        <div class="mb-3">
            <%= form.label :email %>
            <%= form.text_field :email, class:"form-control", placeholder: "youremail@example.com" %>
        </div>
        <div class="mb-3">
            <%= form.label :password %>
            <%= form.password_field :password, class:"form-control", placeholder: "your password" %>
            <br/>
           <span class="btn"> <%= link_to "Forgot Your Password?", password_reset_path %> </span>
        </div>

        <div class="mb-3">
    
            <%= form.submit "Sign In", class:"btn"%>
        
        </div>
</div>

<% end %>
</div>